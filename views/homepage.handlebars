{{#each posts as |post| }}
<div>
    <div>
        <div>
            <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
            <p>Posted by {{post.username}} on {{ format_date post.date_created}}</p>
        </div>
    </div>
    <div>
        <p>{{post.text}}</p>
    </div>
</div>
{{/each}}