{{!-- Display all available posts --}}
{{#each posts as |post| }}
<div class="card border border-5 border-black rounded-4 my-3">
    <div class="card-header primary-background">
        <div class="d-flex justify-content-between align-items-center">
            <h2><a class="custom-anchor-text" href="/post/{{post.id}}">{{post.title}}</a></h2>
            <p class="text-white">Posted by {{post.user.username}} on {{ format_date post.date_created}}</p>
        </div>
    </div>
    <div class="card-body secondary-background">
        <p class="fw-medium">{{post.text}}</p>
    </div>
</div>
{{/each}}